<LinearLayout xmlns:androis="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    androis:layout_width="match_parent"
    androis:layout_height="match_parent"
    androis:paddingBottom="16dp"
    androis:paddingLeft="16dp"
    androis:paddingRight="16dp"
    androis:paddingTop="16dp"
    tools:context=".MainActivity"
    androis:orientation="vertical">

    <TextView
        androis:layout_width="match_parent"
        androis:layout_height="wrap_content"
        androis:text="Quantity"
        androis:layout_marginBottom="16dp"
        androis:textAllCaps="true"/>
    <TextView
        androis:id="@+id/quantity_text_view"
        androis:layout_width="match_parent"
        androis:layout_height="wrap_content"
        androis:textSize="16sp"
        androis:textColor="@android:color/black"
        androis:text="0"/>
    <Button
        androis:layout_width="wrap_content"
        androis:layout_height="wrap_content"
        androis:layout_marginTop="16dp"
        androis:text="Order"/>


</LinearLayout>